{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Meta Determinism Manifest",
  "type": "object",
  "required": [
    "build",
    "seeds",
    "hashes",
    "artifacts",
    "ontology",
    "lattice"
  ],
  "properties": {
    "build": {
      "type": "object",
      "required": ["commit", "timestamp"],
      "properties": {
        "commit": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "seeds": {
      "type": "object",
      "description": "Seed registry for reproducible executions."
    },
    "hashes": {
      "type": "object",
      "required": ["kernel_hash", "meta_hash"],
      "properties": {
        "kernel_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "meta_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
      }
    },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ontology": {
      "type": "object",
      "required": ["manifest_hash", "alignment_hash"],
      "properties": {
        "manifest_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "alignment_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "coverage": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "lattice": {
      "type": "object",
      "required": ["hash", "mode"],
      "properties": {
        "hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "mode": { "type": "string", "enum": ["strict", "explore", "recovery"] },
        "stability": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "entropy": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    }
  }
}
